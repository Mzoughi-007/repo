<style>
    table {
        width: 60%;
        border-collapse: collapse;
        margin: 20px 0;
    }
    th, td {
        padding: 15px;
        text-align: left;
        border: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    img {
        width: 100px; /* Set a fixed width */
        height: auto; /* Maintain aspect ratio */
        padding: 10px; /* Add space around the image */
    }
    tr:hover {
        background-color: #f5f5f5; /* Highlight row on hover */
    }
</style>

<form action="{{ path('author_more') }}"> {# ou on va envoyer les informations #}
    <input name="nbbooks" type="number"> <!-- Removed the comma here -->
    <label for="">Number of books</label>
    <input type="submit" value="save">
</form>

<table border='1'>
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Number of books</th>
        <th>Details</th>
    </tr>
    {% for author in list %}
    <tr>
        <td>{{ author.id }}</td> 
        <td>{{ author.username }}</td>
        <td>{{ author.emailaddress }}</td>
        <td>{{ author.nbbooks }}</td>
        <td><a href="{{ path('author_details2', {'id': author.id}) }}">link</a></td> 
    </tr>
    {% endfor %}
</table>


    