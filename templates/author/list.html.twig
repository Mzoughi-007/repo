<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }
    th, td {
        padding: 15px;
        text-align: left;
        border: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    img {
        width: 100px; /* Set a fixed width */
        height: auto; /* Maintain aspect ratio */
        padding: 10px; /* Add space around the image */
    }
    tr:hover {
        background-color: #f5f5f5; /* Highlight row on hover */
    }
</style>
{% if authors is defined and authors is not empty %}
<h1>Author's length = {{ authors | length }}</h1>
<table border = '1'>
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Picture</th>
        <th>Email</th>
        <th>Number of books</th>
        <th>For more information</th>
    </tr>
    {% set total = 0 %}
    {% for author in authors %}
    <tr>
    {% set total = total + author.nb_book %}
        <td>{{ author.id }}</td>
        <td>{{ author.username }}</td>
        <td><img src="{{ asset(author.picture) }}" alt = "Author Picture"></td>
        <td>{{ author.email }}</td>
        <td>{{ author.nb_book }}</td>
        <td><a href= "{{ path('author_details', {'id': author.id}) }}">link</a></td>
    </tr>
    {% endfor %}
    </table>
    <h1>Total books = {{ total }}</h1>
    {% else %}
    <h1>Authors is not defined</h1>
    {% endif %}
